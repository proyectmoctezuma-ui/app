'use client';
import { useState } from 'react';
import { verifyCode, resetPassword } from './actions';
import styles from './ForgotPassword.module.css';

export default function ForgotPasswordPage() {
  const [step, setStep] = useState(1);
  const [employeeCode, setEmployeeCode] = useState('');
  const [newPassword, setNewPassword] = useState('');
  const [confirmPassword, setConfirmPassword] = useState('');
  const [error, setError] = useState(null);
  const [isLoading, setIsLoading] = useState(false);

  const handleVerifyCode = async (e) => {
    e.preventDefault();
    setError(null);
    setIsLoading(true);
    const result = await verifyCode(employeeCode);
    setIsLoading(false);
    if (result.success) {
      setStep(2);
    } else {
      setError(result.error);
    }
  };

  const handleResetPassword = async (e) => {
    e.preventDefault();
    setError(null);
    if (newPassword !== confirmPassword) {
      setError('Las contraseÃ±as no coinciden.');
      return;
    }
    setIsLoading(true);
    const result = await resetPassword(employeeCode, newPassword);
    setIsLoading(false);
    if (result.success) {
      alert('ContraseÃ±a actualizada exitosamente. Ahora puedes iniciar sesiÃ³n con tu nueva contraseÃ±a.');
      window.location.href = '/login';
    } else {
      setError(result.error);
    }
  };

  return (
    <div className={styles.container}>
      <div className={styles.card}>
        <h1 className={styles.title}>Recuperar ContraseÃ±a</h1>
        {error && <p className={styles.error}>{error}</p>}

        {step === 1 && (
          <form onSubmit={handleVerifyCode} className={styles.form}>
            <p className={styles.subtitle}>
              Ingresa tu cÃ³digo de empleado para verificar tu identidad.
            </p>
            <input
              type="text"
              placeholder="CÃ³digo de Empleado"
              value={employeeCode}
              onChange={(e) => setEmployeeCode(e.target.value)}
              className={styles.input}
              required
            />
            <button type="submit" className={styles.submitButton} disabled={isLoading}>
              {isLoading ? 'Verificando...' : 'Verificar'}
            </button>
          </form>
        )}

        {step === 2 && (
          <form onSubmit={handleResetPassword} className={styles.form}>
            <p className={styles.subtitle}>Ingresa tu nueva contraseÃ±a.</p>
            <input
              type="password"
              placeholder="Nueva ContraseÃ±a"
              value={newPassword}
              onChange={(e) => setNewPassword(e.target.value)}
              className={styles.input}
              required
            />
            <input
              type="password"
              placeholder="Confirmar Nueva ContraseÃ±a"
              value={confirmPassword}
              onChange={(e) => setConfirmPassword(e.target.value)}
              className={styles.input}
              required
            />
            <button type="submit" className={styles.submitButton} disabled={isLoading}>
              {isLoading ? 'Actualizando...' : 'Actualizar ContraseÃ±a'}
            </button>
          </form>
        )}
      </div>
    </div>
  );
}
